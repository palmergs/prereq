# Ignore bundler config.
/.bundle

# Ignore all logfiles and tempfiles.
/log/*
**/*.log
/tmp
**/tmp
public/coverage
!/log/.keep

# Ignore the config files 
config/database.yml
config/mongoid.yml
config/initializers/secret_token.rb
config/secrets.yml
config/initializers/devise.rb

# Mac files
**/.DS_Store

# Bower and NPM files
/node_modules
/bower_components

# Editor files
.idea
.idea/*
*~
*.swp
*.swo

# Ignore the default SQLite database.
/db/*.sqlite3
/db/*.sqlite3-journal

